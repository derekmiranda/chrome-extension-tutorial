{
  "manifest_version": 2,
  "name": "Code Block",
  "author": "Derek and Naomi",
  "version": "1.1",
  "description": "A Productivity Tool for Coding Masochists!",
  "background" : {
    "scripts": ["siteblocker.js", "background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "icons": {
    "16" : "images/lock16.png",
    "48" : "images/lock48.png",
    "128" : "images/lock128.png"
  },
  "browser_action": {
    "default_icon": "images/lock16.png",
    "default_title": "Code Block",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
